@model List<Attendance>
@{
    ViewData["Title"] = "Attendance Record";
    var courseTitle = ViewBag.CourseTitle;
    var studentName = ViewBag.StudentName;
}

<h2>Attendance for @studentName</h2>
<h4>@courseTitle</h4>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var attendance in Model)
        {
            <tr>
                <td>@attendance.Date.ToShortDateString()</td>
                <td>
                    @if (attendance.IsPresent)
                    {
                        <span class="badge bg-success">Present</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Absent</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Details" asp-controller="Course" asp-route-id="@Model.First().CourseId" class="btn btn-secondary">Back to Course</a>