@model EduDiary.Models.AssignmentSubmission
@{
    ViewData["Title"] = "Grade Submission";
}

<h2>Grade Submission</h2>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Student.FullName</h5>
        <p class="card-text"><strong>Submitted:</strong> @Model.SubmissionDate.ToString("g")</p>
        @if (!string.IsNullOrEmpty(Model.FilePath))
        {
            <p class="card-text"><strong>File:</strong> <a href="@Model.FilePath" download>Download</a></p>
        }
        @if (!string.IsNullOrEmpty(Model.Text))
        {
            <p class="card-text"><strong>Text:</strong> @Model.Text</p>
        }
    </div>
</div>

<form asp-action="GradeSubmission">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback" class="control-label"></label>
        <textarea asp-for="Feedback" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Feedback" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Save Grade" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
    </div>
</form>