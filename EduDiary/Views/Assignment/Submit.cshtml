@model EduDiary.Models.AssignmentSubmission
@{
    ViewData["Title"] = "Submit Assignment";
    var assignmentId = ViewBag.AssignmentId;
}

<h2>Submit Assignment</h2>

<form asp-action="Submit" enctype="multipart/form-data">
    <input type="hidden" asp-for="AssignmentId" value="@assignmentId" />
    <div class="form-group">
        <label class="control-label">File Submission</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Or Text Submission</label>
        <textarea asp-for="Text" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-action="Details" asp-route-id="@assignmentId" class="btn btn-secondary">Cancel</a>
    </div>
</form>