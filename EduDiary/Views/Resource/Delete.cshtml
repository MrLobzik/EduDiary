@model Resource
@{
    ViewData["Title"] = "Delete Resource";
}

<h2>Delete Resource</h2>

<h3>Are you sure you want to delete this resource?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        @if (Model.Type == ResourceType.Link)
        {
            <dt class="col-sm-2">URL</dt>
            <dd class="col-sm-10"><a href="@Model.Url" target="_blank">@Model.Url</a></dd>
        }
        else if (Model.Type == ResourceType.File)
        {
            <dt class="col-sm-2">File</dt>
            <dd class="col-sm-10"><a href="@Model.Url" download>Download</a></dd>
        }
        else
        {
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@Model.Content</dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Details" asp-controller="Course" asp-route-id="@Model.Section.CourseId" class="btn btn-secondary">Cancel</a>
    </form>
</div>