@model EduDiary.Models.StudentAnswer
@{
    ViewData["Title"] = "Grade Answer";
}

<h2>Grade Answer</h2>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.TestAttempt.Student.FullName</h5>
        <p class="card-text"><strong>Question:</strong> @Model.Question.Text</p>
        <p class="card-text"><strong>Points:</strong> @Model.Question.Points</p>
        <p class="card-text"><strong>Answer:</strong> @Model.AnswerText</p>
    </div>
</div>

<form asp-action="GradeTextAnswer" method="post">
    <input type="hidden" name="answerId" value="@Model.Id" />
    <div class="form-group">
        <label>Points (max @Model.Question.Points)</label>
        <input type="number" name="pointsAwarded" class="form-control"
               value="@(Model.PointsAwarded ?? 0)" min="0" max="@Model.Question.Points" />
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Save Grade" class="btn btn-primary" />
        <a asp-action="TestResults" asp-route-attemptId="@Model.TestAttemptId" class="btn btn-secondary">Cancel</a>
    </div>
</form>